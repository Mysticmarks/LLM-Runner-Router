#!/bin/bash
# Post-edit hook - runs after Claude edits files

# Auto-run linting on JavaScript files
if echo "$CLAUDE_EDIT_FILE" | grep "\.js$" > /dev/null; then
    echo "ðŸ” Running ESLint on edited file..."
    npx eslint "$CLAUDE_EDIT_FILE" --fix 2>/dev/null || echo "âŒ Linting failed or not available"
fi

# Run tests if core files were modified
if echo "$CLAUDE_EDIT_FILE" | grep -E "(src/core/|src/engines/|src/loaders/)" > /dev/null; then
    echo "ðŸ§ª Core file modified - running relevant tests..."
    
    # Determine test file based on edited file
    TEST_FILE=$(echo "$CLAUDE_EDIT_FILE" | sed 's/src\//tests\//' | sed 's/\.js$/.test.js/')
    
    if [ -f "$TEST_FILE" ]; then
        npm test -- "$TEST_FILE" 2>/dev/null || echo "âš ï¸ Tests not available or failed"
    else
        echo "ðŸ“ No specific test file found, consider creating: $TEST_FILE"
    fi
fi

# Check if editing main entry point
if echo "$CLAUDE_EDIT_FILE" | grep "src/index\.js" > /dev/null; then
    echo "ðŸš€ Main entry point modified - running smoke test..."
    timeout 10s node -e "
        import('./src/index.js').then(() => {
            console.log('âœ… Import successful');
            process.exit(0);
        }).catch(err => {
            console.log('âŒ Import failed:', err.message);
            process.exit(1);
        });
    " || echo "âš ï¸ Smoke test failed or timed out"
fi

# Regenerate docs if API files changed
if echo "$CLAUDE_EDIT_FILE" | grep -E "(api/|Router\.js|Pipeline\.js)" > /dev/null; then
    echo "ðŸ“š API file modified - consider regenerating docs with: npm run docs"
fi